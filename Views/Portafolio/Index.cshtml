@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = @localizer["TituloPrincipal"];
}

<div class="text-justify ">

    <div class="container-body ">


        <div class="row">
            <div class="col-lg-6 d-flex align-items-center">
                <img data-aos="fade-down" data-aos-duration="900" src="./img/Yo.jpg" alt="Imagen" class="img-fluid rounded-pill">
            </div>
            <div class="col-lg-6  mt-3">

                <h1 data-aos="zoom-in-up" data-aos-duration="900">@localizer["Saludo"] Ulises <span>Martínez</span></h1>

                <section class="about">
                    <div class="main">
                        <div class="about-text">

                            <h6 data-aos="zoom-out" data-aos-duration="900"><span>@localizer["Estudiante"]</span> @localizer["Carrera"]</h6>
                            <p data-aos="zoom-out-right" data-aos-duration="900">@localizer["Presentacion"]</p>
                            <p data-aos="zoom-out-left" data-aos-duration="900">@localizer["Frase"]</p>

                            <div class="contacto" data-aos="zoom-in" data-aos-duration="900">
                                <form>
                                    <a class="btn btn-primer-contacto" style="margin-right:1.2rem;" target="_blank" href="https://github.com/Rck23" data-toggle="tooltip" data-placement="top" title="GitHub">
                                        <i class="bi-github" role="img" aria-label="GitHub"></i> GitHub
                                    </a>

                                    <a class="btn btn-primer-contacto" target="_blank" href="https://www.linkedin.com/in/ulises-mart%C3%ADnez-olivares-09276b258/" data-toggle="tooltip" data-placement="top" title="Linkedin">

                                        <i class="bi-linkedin" role="img" aria-label="Linkedin"></i> Linkedin
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
       
    </div>
</div>

@section Scripts {
    <script>
        AOS.init();
    </script>
}